<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
<ImageView
    android:id="@+id/id_generic_icon_feature_transformer"
    android:layout_width="64dp"
    android:layout_height="64dp"
    app:srcCompat="@drawable/ic_rank"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/id_generic_name_feature_transformer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text=""/>
        <ProgressBar
            android:id="@+id/id_generic_value_feature_transformer"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:progress="0"
            android:progressDrawable="@drawable/transformer_progress_bar"
            android:max="10"/>
    </LinearLayout>
</LinearLayout>